{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "gin",
	"patterns": [
		{
			"include": "#macro"
		},
		{
			"include": "#macro2"
		},
		{
			"include": "#variable"
		},
		{
			"include": "#double_quoted_strings"
		},
		{
			"include": "#single_quoted_strings"
		},
		{
			"include": "source.python"
		}
	],
	"repository": {
		"double_quoted_strings": {
			"name": "string.quoted.double.gin",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.gin",
					"match": "\\\\."
				}
			]
		},
		"single_quoted_strings": {
			"name": "string.single.gin",
			"begin": "'",
			"end": "'",
			"patterns": [
				{
					"name": "constant.character.escape.gin",
					"match": "\\\\."
				}
			]
		},
		"macro": {
			"match": "(@)(.*\\(\\))?(.*)",
			"captures": {
			"1": {
				"name": "meta.preprocessor.gin"
			},
			"2": {
				"name": "meta.preprocessor.gin"
			},
			"3": {
				"name": "entity.name.function.gin"
			}
			}
		},
		"macro2": {
			"name": "meta.preprocessor.gin",
			"match": "%.*"
		},
		"variable": {
			"match": "([^#]*/)?([^/^#]+)(=)",
			"captures": {
				"1": {
					"name": "entity.name.class"
				},
				"2": {
					"name": "variable.parameter"
				}
			}
		}
	},
	"scopeName": "source.gin"
}